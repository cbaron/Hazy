.ManageByop

    h1
        text-decoration: underline
        margin-bottom: 1rem

    .selected-team
        padding: 2rem
        border: 1px solid black
        margin: 1rem
        border-radius: 1rem
         
    form
        border-bottom: 1px solid black
        display: flex
        flex-wrap: wrap
        justify-content: center
        padding-bottom: .5rem
        margin-bottom: .5rem

        >div
            padding: 1rem

            input, select
                margin: 0 .75rem

                &.changed
                    background-color: $LightGreen
                    color: $DarkGreen
                    border-color: $DarkGreen
    
    .changes
        background-color: $LightGreen
        border-radius: 1rem
        color: white
        padding: 1rem
        margin: 1rem

    button
        color: $HazyGreen

        &:hover
            background-color: $HazyGreen
            color: white

