.ManageByop

    section

        .content
            border: 1px solid $LightGray
            border-top: none
            padding-bottom: 0rem 1rem 2rem 1rem
            margin-bottom: 1rem

    h1
        border-radius: 1rem
        cursor: pointer
        line-height: 3rem
        margin-bottom: 2rem
        transition: background-color .5s, color .5s, opacity .25s

        &:hover
            color: $LightGreen
            background-color: $DarkGreen

    .selected-team
        padding: 2rem
        border: 1px solid black
        margin: 1rem
        border-radius: 1rem
 
    
    form
        border-bottom: 1px solid black
        display: flex
        flex-wrap: wrap
        justify-content: center
        padding-bottom: .5rem
        margin-bottom: .5rem

        >div
            padding: 1rem

            input, select
                margin: 0 .75rem

                &.changed
                    background-color: $LightGreen
                    color: $DarkGreen
                    border-color: $DarkGreen
    
    .changes
        background-color: $LightGreen
        border-radius: 1rem
        color: white
        padding: 1rem
        margin: 1rem

    button
        color: $HazyGreen

        &:not(.disabled)
            &:hover
                background-color: $HazyGreen
                color: white

