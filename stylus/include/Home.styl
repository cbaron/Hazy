.Home

    .title
        color: white
        font-size: 1.5rem
        left: 2rem
        position: absolute
        top: 1rem
        text-transform: uppercase

    > img
        display: block
        width: 100%

    .intro
        padding: 1rem

        >div:nth-child(2)
            padding: 4rem 6rem
             
        svg
            height: 100%
            padding: 4rem
            margin-left: 2rem
            width: 100%

        h3
            margin-bottom: 1rem
            text-transform: uppercase

        p
            font-size: .85rem
            font-weight: 300

    .side-by-side
        >*
            flex: 1
            position: relative

    .featured-product
        img
            display: block
            width: 100%

    .disc-doctor
        background-image: url(/static/img/fairway-pond-istock.jpg)
        background-size: 100% 100%
        color: black
        padding: 3rem

        .main
            display: flex

            div
                flex: 1
                margin: 0rem 1rem
                text-align: center
            
            .logo-white
                display: block
                height: 6rem
                margin: 0rem auto 1rem auto
                
            .heading
                font-size: 4rem
                line-height: 4rem
              
            .subtitle
                font-weight: 300

    .ez-finder
        background-image: url(/static/img/ez-finder.png)
        background-size: 100% 100%

        .caption
            position: absolute;
            width: 33%
            text-align: center
            left: 33%
            bottom: 1rem
            color: white
            font-size: 1.5rem
            line-height: 2rem

    .suppliers
        font-size: 1.25rem
        font-weight: 300
        padding: 2rem
        text-align: center 

        .logos
            display: flex
            flex-wrap: wrap
            padding: 2rem

            li
                flex: 1

@media (max-width: 767px)
    .Home
        .side-by-side
            display: inherit

        .intro
            svg
                margin: 0
                padding: 2rem

            >div:nth-child(2)
                padding: 2rem

            h3
                font-size: .75rem
                text-align: center

@media (min-width: 1200px)
    .Home
        .intro
            p
                font-size: .85rem

@media (min-width: 1400px)
    .Home
        .intro
            h3
                font-size: 1.5rem
                line-height: 1.5rem
            p
                font-size: 1.25rem
                line-height: 1.25rem

        .disc-doctor
            .subtitle
                font-size: 1.5rem
                line-height: 1.5rem
                padding-top: 1rem
