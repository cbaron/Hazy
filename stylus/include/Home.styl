.Home

    .title
        font-size: 2rem
        left: 1rem
        position: absolute
        top: 1rem
        text-transform: uppercase

    > img
        display: block
        height: 30rem
        width: 100%

    .intro
        background: linear-gradient(to right, black, #565759, black)
        padding: 2rem 6rem
        color: white

        h3
            margin-bottom: 1rem
            text-transform: uppercase

    .side-by-side
        display: flex

        >*
            flex: 1
            position: relative

    .featured-product
        img
            display: block
            width: 100%

    .disc-doctor
        background-image: url(/static/img/basket-under-trees.jpg)
        background-size: 100% 100%
        color: white
        padding: 3rem

        .main
            display: flex

            div
                flex: 1
                margin: 0rem 1rem
            
                .logo-white
                    height: 10rem
            
                &:first-child
                    text-align: right

                &:last-child
                    font-size: 4rem
                    line-height: 10rem
        
        
        .subtitle
            text-align: center

    .ez-finder
        background: linear-gradient(to bottom, #8f57a3, #e3098e)

        .disc
            height: 100%
            width: 100%
            
            path
                background: linear-gradient(to bottom, #f38c3e, #fee32a, #f38c3e )

            .curvedText
                dominant-baseline: text-before-edge
                letter-spacing: 2px
                text-anchor: middle
                stroke: #2cff00
                fill: #2cff00

        .caption
            position: absolute;
            width: 33%
            text-align: center
            left: 33%
            bottom: 1rem
            color: white
            font-size: 1.5rem
            line-height: 2rem

    .featured-event
        background-image: url(/static/img/belmont-sun.jpg)
        background-size: 100% 100%
        color: white
        font-size: 2rem
        line-height: 3rem
        padding: 3rem
        text-align: center
    
        >*:nth-child(2)
            color: #2cff00
            font-size: 3rem
            line-height: 5rem
    
