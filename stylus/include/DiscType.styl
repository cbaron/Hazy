.DiscType
    align-items: center
    display: flex
    line-height: 1.25rem
    padding: 1rem
    text-align: left

    >span:first-child
        flex: 10
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
    
    >span:last-child
        align-items: center
        display: flex
        flex: 1

    svg
        display: none
        width: 1.25rem
        height: 1.25rem
        margin: 0rem .5rem

    &:hover
        background-color: $LightGrayTransparent

        svg
            display: inline-block
