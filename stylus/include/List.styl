.List
    li
        align-items: center
        display: flex
        cursor: pointer

        >*:first-child
            flex: 10
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
        
        >*:last-child
            align-items: center
            display: flex
            flex: 1

            svg
                display: none
                width: 1.25rem
                height: 1.25rem
                margin: 0rem .5rem
        
        &:hover
            background-color: $LightGrayTransparent

            >*:last-child
                svg
                    display: inline-block

    >button
        right: 2rem
        top: 10rem
    
    >button+button
        top: 16rem

    .heading
        border-bottom: 1px solid $LightGray
        color: black
        font-size: 1.5rem
        font-weight: 700
        line-height: 1.5rem
        padding: .75rem .25rem
        position: relative

        button
            left: 1rem
            position: absolute
            top: .25rem

        &.side-by-side
            border-bottom: none
            font-size: 1rem
            font-weight: 400
            padding: 0

        &.is-hidden
            .caret-down
                transform: rotate(180deg)


.DiscType
    text-align: left

    >span:first-child
        flex: 10
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
    
    >span:last-child
        align-items: center
        display: flex
        flex: 1

    svg
        display: none
        width: 1.25rem
        height: 1.25rem
        margin: 0rem .5rem
