.List
    padding: .5rem

    li
        cursor: pointer
        
        &:hover
            background-color: $LightGrayTransparent

            svg
                display: inline-block

    >button
        right: 2rem
        top: 10rem
    
    >button+button
        top: 16rem

    .heading
        border-bottom: 1px solid $LightGray
        color: black
        font-size: 1.5rem
        font-weight: 700
        line-height: 1.5rem
        padding: 0rem .25rem .75rem .25rem
        position: relative

        button
            border: none
            display: flex
            font-size: .75rem
            height: 1rem
            left: 1rem
            padding: 0rem
            position: absolute
            top: .25rem

            svg
                height: 1rem

            span
                font-size: .75rem
                padding-left: 1rem

            &:hover
                text-decoration: underline
                
