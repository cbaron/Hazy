.List
    li
        align-items: center
        display: flex
        cursor: pointer

        >.selection
            align-items: center
            display: flex
            flex: 1
            justify-content: center

            input
                display: none
                width: initial
                transform: scale(2)
                -ms-transform: scale(2)
                -webkit-transform: scale(2)

        >.item
            flex: 10
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
        
        >.buttons
            align-items: center
            display: flex
            flex: 1

            svg
                display: none
                width: 1.25rem
                height: 1.25rem
                margin: 0rem .5rem
        
        &:hover
            background-color: $LightGrayTransparent

            >.buttons
                svg
                    display: inline-block

            >.selection input
                display: inherit

        &.checked 
            background-color: $LightGrayTransparent

            >.selection input
                display: inherit
        
        &.is-dragging
            background-color: $LightGrayTransparent
            
    &.is-dragging
        li
                >.buttons
                    svg
                        display: none

                >.selection input
                    display: none

        li:not(.is-dragging)
            &:hover
                background-color: initial

    >button
        right: 2rem
        top: 10rem
    
    >button+button
        top: 16rem

    .heading
        border-bottom: 1px solid $LightGray
        color: black
        font-size: 1.5rem
        font-weight: 700
        line-height: 1.5rem
        padding: .75rem .25rem
        position: relative

        button
            left: 1rem
            position: absolute
            top: .25rem

        &.side-by-side
            border-bottom: none
            font-size: 1rem
            font-weight: 400
            padding: 0

        &.is-hidden
            .caret-down
                transform: rotate(180deg)
        
    
