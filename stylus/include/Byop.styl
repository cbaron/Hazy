.Byop
    text-align: center

    .featured-event
        .content
            .center
                font-size: 1rem
                font-weight: 400
                line-height: 1.25rem

                ol
                    font-size: .75rem
                    line-height: 1rem
                    margin-top: 2rem
                    text-align: left

    select
        background-color: white
        padding: .25rem
        -webkit-appearance: none
        -moz-appearance: none
        appearance: none

    h3
        font-size: 2rem
        text-transform: uppercase
        padding: 4rem 0rem

    

    .side-by-side
        display: flex

    .sub-heading
        color: $LightGray
        margin-bottom: 4rem

    .registration
        font-size: 1.25rem
        font-weight: 100
        line-height: 1.5rem
        margin: 0 auto
        width: 40%

        .main-info
            font-size: .85rem
            line-height: 1rem
            margin-top: 4rem

            li
                margin: 1rem 0rem

        .info
            color: $LightGray
            font-size: .65rem
            line-height: .75rem

        .error
            border-color: $ErrorRed

        .division, .player:first-child, .players, .contact, .shirts, .payment-info, .total, .donation
            margin-bottom: 2rem

        .player, .contact, .payment-info
            input:not(last-child), select:not(last-child)
                margin-bottom: .5rem

        .spots-left
            color: $HazyGreen

        .payment-info
            .info
                font-size: .75rem
                font-weight: 700
                margin: .25rem

            &.disabled
                opacity: .3

        .cash
            display: flex
            justify-content: center
            opacity: 1

            input
                margin: .5rem
                width: inherit
                
        .shirts
            line-height: 2rem
                
            >div
                margin-right: 1rem

            input
                width: 2rem 
        
        .exp-ccv
            display: flex
            text-align: left

            .exp
                display: flex

                >div
                    flex: 1

            >div
                &:first-child 
                    flex: 2

                &:nth-child(2)
                    flex: 1

        .total
            font-weight: 700
            justify-content: center

            >*
                margin: .25rem

        button
            margin-bottom: 4rem

            &.submitting
                opacity: .3
            
                &:hover
                    background-color: white
                    color: black

            &:hover
                background-color: black
                color: white
