.Shop
    text-align: center
    margin-top: 4rem
    
    >div:first-child
        padding: 2rem
        
        h4
            font-weight: 700
            text-transform: uppercase
            font-size: 1.2rem

        ul
            justify-content: center
            flex-wrap: wrap
            margin-top: 1rem

            li
                cursor: pointer
                
                &:not(:first-child)::before
                    content: '|'
                    margin: 0 .35rem
                
    .ez-finder
        position: relative
        width: 100%
        margin-bottom: 2rem

        .title
            position: absolute
            left: 1rem
            top: 1rem

        .caption
            position: absolute
            width: 33%
            text-align: center
            left: 33%
            bottom: 1rem
            color: white
            font-size: 1.5rem
            line-height: 2rem
    
