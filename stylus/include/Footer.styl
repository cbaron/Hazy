.Footer
    position: relative
    color: white
    
    .overlay
        position: absolute
        top: 0
        left: 0
        height: 100%
        width: 100%
        padding-top: 7%
        padding-left: 10%
        
        >div
            width: 33%
            text-align: center

            >img
                margin-bottom: 2rem
             
            .contact
                color: white
                line-height: 1.25rem
                
                >div:first-child
                    text-transform: uppercase
                a
                    color: white
                    
                    svg
                        fill: white
                        height: 2rem
                        margin-top: .5rem

@media (max-width: 767px)
    .Footer .overlay >div
        .contact
            font-size: .8rem
            line-height: 1rem

@media (max-width: 900px)
    .Footer .overlay >div
        >img
            margin-bottom: 1rem
        .contact
            font-size .9rem
            
            a svg
                height: 1.5rem

@media (min-width: 1400px)
    .Footer .overlay >div
        .contact
            font-size: 1.5rem
            line-height: 2rem