.Footer
    color: white
    display: flex
    background-color: black
    padding: 2rem

    >div
        flex: 1

        &:nth-child(2)
            background-image: url($CDN/hazy-tree.svg)
            background-repeat: no-repeat
            background-size: 100% 100%

        .logo-white
            display: block
            margin: auto
            width: 50%

        .contact
            font-weight: 300
            margin: auto
            padding-top: 3rem
            text-align: center
            width: 50%

            a
                display: block
                height: 2rem
                margin: .5rem auto
                width: 2rem

                svg
                    fill: white

@media (max-width: 767px)
    .Footer
        display: inherit
        font-size: .75rem
        line-height: 1rem
        
        >div
            flex: inherit

            &:nth-child(2)
                height: 15rem

            .contact
                padding: 0

                a
                    height: 1rem
                    width: 1rem

@media (min-width: 1400px)
    .Footer
        .contact
            font-size: 1.5rem
            line-height: 2rem
            
