.Footer
    color: white
    display: flex
    background-color: black
    padding: 2rem

    >div
        flex: 1

        &:nth-child(2)
            background-image: url(/static/img/hazy-tree.svg)
            background-repeat: no-repeat
            background-size: 100% 100%

        .logo-white
            display: block
            margin: auto
            width: 50%

        .contact
            font-weight: 300
            margin: auto
            padding-top: 3rem
            text-align: center
            width: 50%

            div
                &:first-child
                    margin-bottom: 1rem
                    text-decoration: underline
                
            a
                display: block
                height: 2rem
                margin: .5rem auto
                width: 2rem

                svg
                    fill: white
