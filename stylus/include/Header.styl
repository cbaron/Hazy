$background = rgba( 0, 0, 0, .7 )

.Header
    background-color: $background
    font-weight: 300
    height: 2rem
    left: 0
    position: absolute
    text-align: center
    top: 1rem
    width: 100%
    z-index: 100
    
    .logo-white        
        cursor: pointer
        height: 1.5rem
        margin: .25rem

    .nav 
        align-items: center
        display: flex

        >li
            &:first-child
                flex: 1
           
            &:last-child
                cursor: pointer
                height: 100%
                margin-right: 1rem
                text-align: right
                transition: background-color .5s
                    
                svg
                    fill: white

                ul
                    background-color: $background
                    cursor: pointer
                    color: white
                    display: none
                    height: initial
                    position: absolute
                    top: 5rem
                    right: 0rem

                    li
                        padding: .5rem
                        white-space: nowrap

                        &:hover
                            text-decoration: underline

                        &:first-child
                            border-bottom: 1px solid white
                            cursor: default
                            text-decoration: none
                            

                &:hover
                    background-color: white

                    svg
                        fill: black
                        opacity: .7

                    ul
                        display: block

    .spans
        li
            display: inline-block
            line-height: 5rem

    ul
        height: 100%
                     
    span
        color: white
        text-transform: uppercase

    &.has-typeahead
        .nav 
            >li
                &:first-child
                    flex: 1
               
                &:nth-child(2)
                    flex: 10
                    
                    .TypeAhead
                        margin: auto
                        max-width: 35rem
                    
                &:last-child
                    flex: 1
                    position: initial
        

@media (min-width: 1200px)
    .Header
        height: 5rem
    
        .spans
            li
                display: inline-block
                line-height: 5rem

        .logo-white
            height: 3rem
            margin: 1rem 3rem

        .profile
            height: 1rem
            margin: 2rem
       
        span  
            font-size: 1rem
            margin: 0rem 2rem

@media (min-width: 1400px)
    .Header
        height: 7rem
    
        .spans
            li
                display: inline-block
                line-height: 7rem

        .logo-white
            height: 5rem
            margin: 1rem 4rem

        .profile
            height: 2rem
            margin: 2.5rem
       
        span  
            font-size: 2rem
            margin: 0rem 4rem
