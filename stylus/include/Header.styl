.Header
    background-color: black
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.35)
    border-top: 1px solid black
    opacity: 0.75
    height: 5rem
    left: 0
    position: absolute
    text-align: center
    top: 1rem
    width: 100%
    z-index: 100

    .nav 
        display: flex

        >li
            &:first-child
                flex: 1
            
            &:nth-child(2)
                flex: 10
            
            &:last-child
                flex: 1

    .spans
        li
            display: inline-block
            line-height: 5rem

    ul
        height: 100%
                     
    .logo-white
        height: 3rem
        margin: 1rem
    
    .profile
        height: 2rem
        margin: 1.5rem
        
        
    span
        color: white
        font-size: 1rem
        margin: 0rem 2rem
        text-transform: uppercase
