.Header
    background-color: black
    font-weight: 300
    opacity: 0.70
    height: 5rem
    left: 0
    position: absolute
    text-align: center
    top: 1rem
    width: 100%
    z-index: 100

    .nav 
        display: flex

        >li
            &:first-child
                flex: 1
            
            &:nth-child(2)
                flex: 10
            
            &:last-child
                flex: 1

    .spans
        li
            display: inline-block
            line-height: 5rem

    ul
        height: 100%
                     
    .logo-white
        height: 3rem
        margin: 1rem 2rem
    
    .profile
        height: 2rem
        margin: 1.5rem
        
        
    span
        color: white
        font-size: 1rem
        margin: 0rem 2rem
        text-transform: uppercase
