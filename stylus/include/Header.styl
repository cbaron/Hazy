.Header
    background-color: black
    font-weight: 300
    opacity: 0.70
    left: 0
    position: absolute
    text-align: center
    top: 1rem
    width: 100%
    z-index: 100

    .nav 
        display: flex

        >li
            &:first-child
                flex: 1
            
            &:nth-child(2)
                flex: 10
            
            &:last-child
                flex: 1

    .spans
        li
            display: inline-block
            line-height: 5rem

    ul
        height: 100%
                     
    span
        color: white
        text-transform: uppercase

@media (min-width: 1200px)
    .Header
        height: 5rem
    
        .spans
            li
                display: inline-block
                line-height: 5rem

        .logo-white
            height: 3rem
            margin: 1rem 3rem

        .profile
            height: 1rem
            margin: 2rem
       
        span  
            font-size: 1rem
            margin: 0rem 2rem

@media (min-width: 1400px)
    .Header
        height: 7rem
    
        .spans
            li
                display: inline-block
                line-height: 7rem

        .logo-white
            height: 5rem
            margin: 1rem 4rem

        .profile
            height: 2rem
            margin: 2.5rem
       
        span  
            font-size: 2rem
            margin: 0rem 4rem
