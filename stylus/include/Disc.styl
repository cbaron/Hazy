.Disc
    .content
        .left-panel
            width: 14rem
            border-right: 1px solid black
            padding: 1rem
            
            .filter
                margin: 2rem 0
                text-align: left
                
                >div:first-child
                    font-weight: 700
                    font-size: 1.2rem
                    
                ul
                    overflow-y: auto
                    padding: .5rem

                    li
                        input, label
                            cursor: pointer

                        input
                            display: none

                        input + span:before
                            border: 1px solid #7f83a2
                            border-radius: .25rem
                            content: "\00a0"
                            color: white
                            display: inline-block
                            font: 16px/1em sans-serif
                            height: 16px
                            margin: 0 .25em 0 0
                            padding: 0
                            width: 16px
                        
                        input:checked + span:before
                            background: #3d404e
                            border-radius: .25rem
                            color: white
                            content: "\2713"
                            text-align: center
