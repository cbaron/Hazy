.Division
    padding: 2rem 6rem

    h4
        text-align: center

    .empty
        color: $ErrorRed
        text-align: center

    ol
        margin: 1rem 3rem
        padding: 1rem 3rem

        li
            border: 1px solid $HazyGreen
            border-radius: .25rem
            color: $LightGray
            display: list-item
            line-height: 1.15rem
            list-style-type: decimal
            list-style-position: outside
            padding-top: .5rem
            transition: background-color .25s

            >div
                display: inline-block
                width: 100%

                >div
                    display: block
                    
                    >span
                        display: block
                        line-height: 1.5rem
                        text-align: center
                        
                    .disc-selection, .shirt-selection
                        opacity: 0
                        

            &:hover
                background-color: $LightGray
                color: $DarkGreen

                .disc-selection, .shirt-selection
                    opacity: .5


@media (max-width: 767px)
    .Division
        padding: 1rem

        ol
            font-size: .6rem
            margin: .25rem 1rem
            padding: .25rem 2rem
