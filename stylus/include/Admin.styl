.Admin
    color: $HazyGreen
    margin: 8rem 2rem
    text-align: center
    
    .splash
        display: flex
    
        >*
            flex: 1

        img
            display: block
            margin: 1rem auto

        button
            border-color: $HazyGreen
            color: $HazyGreen
            background-color: white
            border: 1px solid $LightGray
            border-radius: 10px
            box-shadow: 1px 2px 5px #ccc
            padding: 1.25rem
            width: 10rem
            text-transform: uppercase

            &:hover
                background-color: $HazyGreen
                color: white
