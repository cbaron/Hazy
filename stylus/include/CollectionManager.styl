.CollectionManager
    display: flex
    height: 100%

    .left-panel
        flex: 1
        text-align: left

        >section
            padding: 1rem 0rem 1rem 1rem

        >section+section, >section:first-child
            border-bottom: 1px solid $LightGray

        svg
            height: .75rem
            width: .75rem

        .side-by-side
            display: flex
            align-items: center

            >*:last-child
                padding-left: 1rem

        button
            border: none
            font-size: .75rem
            padding: .5rem 0rem 0rem 0rem

            &:hover
                font-weight: 700
                text-decoration: none


        .Collections
            li
                padding: .25rem 0rem

    .main-panel
        border-left: 1px solid $LightGray
        flex: 4
        height: 100%
        overflow-x: hidden

        .List
            display: flex
            flex-direction: column
            height: 100%

            ol
                overflow-y: auto
                 
                >li, >div
                    line-height: 1.25rem
                    margin-right: 3rem
                    text-align: left
                    
                    .item
                        padding: 1rem
            
        .Form
            height: 100%
            display: flex
            flex-direction: column
            
            .List
                .floating
                    position: static
                    margin: 1rem 0 0 1rem
            
            .heading
                font-weight: bold
                font-size: 1.5rem
                padding-bottom: 1rem
            
            .prompt
                display: none
            
	        .form-box
                display: flex;
                flex-direction: column;

                form
                    overflow-y: auto

                    .form-group
                        display: flex

                        &:not(.nested):not(.has-image)
                            align-items: center
                            margin: 1rem 0rem
                                
                            >*:first-child
                                flex: 1
                            >*:nth-child(2)
                                flex: 5
                            
                        &.nested
                            flex-direction: column
                            margin: 3rem 0
                            padding: 0 3rem
                            
                            >label
                                margin-right: 0
                                width: 100%
                                
                        &.has-image
                            align-items: center
                            
                            >input
                                flex: 1

                            >div
                                flex: 1
                                margin-left: 1rem
                                >img
                                    max-width: 20rem


            .btn-row
                margin-top: 1rem   

        >.Form, >.Deleter
            padding: 1rem 0rem

            >.form-box >form
                padding: 2rem 3rem

