.CollectionManager
    display: flex

    .left-panel
        border-right: 1px solid $LightGray
        flex: 1
        text-align: left

        >section
            padding: 1rem 0rem 1rem 1rem

        >section+section, >section:first-child
            border-bottom: 1px solid $LightGray

        svg
            height: .75rem
            width: .75rem

        .side-by-side
            display: flex
            align-items: center

            >*:last-child
                padding-left: 1rem

        button
            border: none
            font-size: .75rem
            padding: .5rem 0rem 0rem 0rem

        .Collections
            li
                padding: .25rem 0rem

    .DiscTypes
        flex: 4
        overflow: hidden
        margin-right: 3rem

    .Form, .Deleter
        flex: 4
        padding: 1rem 0rem

        form
            padding: 2rem 3rem


    >button
        bottom: 2rem
        right: 2rem
