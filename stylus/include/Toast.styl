.Toast
    position: fixed
    right: 2rem
    top: 2rem
    z-index: 200
    display: flex
    flex-direction: column
    
    .ToastMessage
        display: flex
        width: 20rem
        align-items: center
        background-color: $ErrorRed
        border-radius: 5px
        box-shadow: 0 0 12px #999999
        color: white
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif
        opacity: 0.8
        padding: 1rem
        margin-bottom: 1rem

        &.success
            background-color: #4aa252

        >div
            
            &:first-child
                padding: .5rem

                svg
                    fill: white
                    stroke: white
                    height: 2rem
                    width: 2rem
        
            &:nth-child(2)
                padding: 0 .5rem

                >div:first-child
                    font-weight: bold
