.ByopFriday
    a
        color: $HazyGreen

    .featured-event
        .content
            left: 0
            width: 100%

            .center
                font-size: 6rem

    select
        background-color: white
        padding: .25rem
        -webkit-appearance: none
        -moz-appearance: none
        appearance: none

    h3
        font-size: 2rem
        text-transform: uppercase
        padding: 4rem 0rem

    .side-by-side
        display: flex

    .event-info
        padding: 0rem 10rem

    .important-info
        font-size: .8rem
        line-height: 1.15rem
        padding: 1.5rem

        h4
            font-size: 1rem
            line-height: 2rem

    .detailed-info
        font-size: .85rem
        line-height: 1rem
        padding: 2rem

        li
            margin: 1rem 0rem

            div
                font-weight: 700
                font-size: 1.25rem
                line-height: 1.35rem

    .sub-heading
        color: $LightGray
        margin-bottom: 4rem

    .registration
        font-size: 1.25rem
        font-weight: 100
        line-height: 1.5rem
        margin: 0 auto
        text-align: center
        width: 40%

        .info
            color: $LightGray
            font-size: .9rem
            line-height: 1.05rem
            text-align: left

        .error
            border-color: $ErrorRed

        .player:first-child, .players, .contact, .shirts, .payment-info, .total, .donation
            margin-bottom: 2rem

        .player, .contact, .payment-info
            input:not(last-child), select:not(last-child)
                margin-bottom: .5rem

        .spots-left
            color: $HazyGreen

        .payment-info
            .info
                font-size: .85rem
                font-weight: 700
                margin: .25rem

            &.disabled
                opacity: .3

        .cash
            display: flex
            justify-content: center
            margin: -1rem 0 3rem 0
            opacity: 1

            input
                margin: .5rem
                width: inherit
                
        .shirts
            line-height: 2rem
                
            >div
                margin-right: 1rem

            input
                width: 2rem 
        
        .exp-ccv
            display: flex
            text-align: left

            .exp
                display: flex

                >div
                    flex: 1

            >div
                &:first-child 
                    flex: 2

                &:nth-child(2)
                    flex: 1

        .total
            font-weight: 700
            justify-content: center

            >*
                margin: .25rem

        button
            margin-bottom: 4rem

            &.submitting
                opacity: .3
            
                &:hover
                    background-color: white
                    color: black

            &:hover
                background-color: black
                color: white


@media (max-width: 767px)
    .Byop
        .featured-event
            .content
                .center
                    font-size: 5rem 

        .event-info
            padding: 0rem 1rem

        .important-info
            font-size: .75rem
            line-height: 1rem
            padding: 1rem

            h4
                font-size: 1rem
                line-height: 1.15rem
        
        .dates
            font-size: .75rem
            line-height: .85rem
            padding: 1rem

            li
                margin-bottom: .5rem

        .detailed-info
            font-size: .75rem
            line-height: .9rem
            padding: 1rem

            li
                margin: .5rem 0rem

                div
                    font-weight: 700
                    font-size: 1rem
                    line-height: 1.25rem
        
        .registration
            font-size: 1rem
            font-weight: 100
            line-height: 1.25rem
            margin: 0 auto
            text-align: center
            width: 80%

            .info
               font-size: .8rem 
               line-height: .9rem
